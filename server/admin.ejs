<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Product Admin - Dashboard HTML Template</title>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,700">
    <!-- https://fonts.google.com/specimen/Roboto -->
    <link rel="stylesheet" href="css/fontawesome.min.css">
    <!-- https://fontawesome.com/ -->
    <link rel="stylesheet" href="css/bootstrap.min.css">
    <!-- https://getbootstrap.com/ -->
    <link rel="stylesheet" href="css/templatemo-style.css">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
</head>

<body id="reportsPage">
    <div class="" id="home">
        <!-- 상단(타이틀,네비게이터) -->
        <nav class="navbar navbar-expand-xl">
            <div class="container h-100">
                <a class="navbar-brand" href="/admin">
                    <h1 class="tm-site-title mb-0">Product Admin</h1>
                </a>
            </div>
        </nav>

        <!-- 중단(내용) -->
        <div class="container">
            <!-- 행(row) 시작 -->
            <div class="row">
                <div class="col">
                    <p class="text-black mt-5 mb-5">Welcome back, <b>Admin</b></p>
                </div>
                <!-- 행 내용(row content) 시작 -->
                <div class="col-12 tm-block-col">
                    <div class="tm-bg-primary-dark tm-block tm-block-taller tm-block-scroll">
                        <div>
                            <h2 class="tm-block-title">Orders List</h2>
                            <select class='tm-block-col' id='areaList' style='width:150px;'>
                                <option value='all' selected='selected'>전체</option>
                            </select>
                        </div>

                        <table class="table">
                            <thead>
                                <tr>
                                    <th scope="col">ORDER TIEM</th>
                                    <th scope="col">ORDER AREA</th>
                                    <th scope="col">ORDER NO</th>
                                    <th scope="col">ORDERER PN</th>
                                    <th scope="col">DETAIL</th>
                                    <th scope="col">SERVING</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

        </div>

        <!-- 하단 -->
        <footer class="tm-footer row tm-mt-small">
            <div class="col-12 font-weight-light">
            </div>
        </footer>
    </div>

    <script src="js/jquery-3.3.1.min.js"></script>
    <!-- https://jquery.com/download/ -->
    <script src="js/moment.min.js"></script>
    <!-- https://momentjs.com/ -->
    <script src="js/Chart.min.js"></script>
    <!-- http://www.chartjs.org/docs/latest/ -->
    <script src="js/bootstrap.min.js"></script>
    <!-- https://getbootstrap.com/ -->
    <script src="js/tooplate-scripts.js"></script>


    <!-- [운영자] - 휴게소 종류 셀렉트박스 값 -->
    <script>
        $.ajax({
            url: 'requestRestAreaLatLong',
            type: 'POST',
            success: function (data) {
                const result = JSON.parse(data);
                addSelectOption(result);
            }
        })

        // 셀렉트박스 리스트 아이템 붙이기
        function addSelectOption(data) {
            const selectItem = document.getElementById('areaList');
            for(var i=0; i < data.length; i++) {
                console.log(data[i]);
                var optionItem = document.createElement('option');
                optionItem.innerHTML = data[i].area_nm;
                optionItem.value = data[i].area_nm;
                selectItem.appendChild(optionItem);
            }
        }
    </script>

    <!-- [운영자] - 휴게소에 들어온 주문내역 DB에 접근해서 Table 형태로 그리기 -->
    <script>
        const ajax = $.ajax;
        window.onload = ajaxFunc('전체');

        $('#areaList').change(function() {
            var area_nm = $('#areaList option:selected').val();
            console.log('selected:',area_nm);

            clearTable();
            ajaxFunc(area_nm);
        })

        // ajax 통신 부분
        function ajaxFunc(area_nm) {
            ajax({
                url: 'adminRequestOrderList',
                type: 'POST',
                data: {
                    area_nm : area_nm
                },
                success: function (data) {
                    console.log('draw table start!');
                    if(data.length != 0) {
                        const jsonData = JSON.parse(data);
                        drawTable(jsonData);
                    }
                }
            })
        }

        // 이부분은 나중에 주문내역 보이도록 현재는 휴게소 정보로 나오도록 일단 해둠 (수정할 것)
        function drawTable(data) {
            const oldChild = document.querySelector('tbody');
            console.log(oldChild);
            for (var i = 0; i < data.length; i++) {
                console.log(data[i]);
                var tr = document.createElement('tr');
                var td0 = document.createElement('td');
                var td1 = document.createElement('td');
                var td2 = document.createElement('td');
                var td3 = document.createElement('td');
                var td4 = document.createElement('td');
                var td5 = document.createElement('td');

                td0.innerHTML = data[i].order_time;
                td1.innerHTML = data[i].area_nm;
                td2.innerHTML = data[i].order_no;
                td3.innerHTML = data[i].orderer_pn;
                td4.innerHTML = `<button>세부내용</button>`;    // 눌르면 주문 상세내용 나옴
                td5.innerHTML = `<button>확인</button>`;        // 눌르면 주문확인 되어 사용자는 결제취소 불가능

                tr.appendChild(td0);
                tr.appendChild(td1);
                tr.appendChild(td2);
                tr.appendChild(td3);
                tr.appendChild(td4);
                tr.appendChild(td5);

                oldChild.appendChild(tr);
            }
        }

        // 조회조건이 변경되면 테이블 밀어야함
        function clearTable() {
            const oldChild = document.querySelector('tbody');
            // 기존 테이블 내용 삭제
            while ( oldChild.hasChildNodes() ) { 
                oldChild.removeChild( oldChild.firstChild );
            }
        }
    </script>

</body>

</html>